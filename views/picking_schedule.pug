#schedule
  #titleBar
    ul.tab-nav
      li.left
        select#selectYear.form-control(v-model='selectYear', v-on:change='changeYear(selectYear)')
          option(value='-1', disabled) 選擇學期
          option(value='1042') 104學年度第2學期
          option(value='1051') 105學年度第1學期
          option(value='1052', selected) 105學年度第2學期
      li.left
        select#selectDegree.form-control(v-model='selectDegree', v-on:change='changeDegree(selectDegree)')
          option(value='-1', disabled) 選取部門
          option(value='0') 學士班
          option(value='5') 進修學士班
          option(value='1') 碩士班
      li.left
        select#selectDept.form-control(v-model='selectDept', v-on:change='changeDepartment(selectDept)')
          option(value='-1', disabled) 選取科系
          option(v-for='dept in deptData') {{ dept.dept }}
      li.left
        select#selectlevel.form-control(v-model='selectLevel', v-on:change='warningAdd()', v-bind='{ disabled: selectDept == -1 }')
          option(value='-1', disabled) 選取年級
          option(value='1', v-if='selectDegree != -1') 一年級
          option(value='2', v-if='selectDegree != -1') 二年級
          option(value='3', v-if='selectDegree == 0 || selectDegree == 5') 三年級
          option(value='4', v-if='selectDegree == 0 || selectDegree == 5') 四年級
          option(value='5', v-if='selectDegree == 0 || selectDegree == 5') 五年級

      li.right
        a(href='#', title='清除所有內容(初始化)', v-on:click='$("#checkClear").modal()')
          i.fa.fa-trash
          p 重置課表
      li.right
        a(href='#', title='輸出課程代碼(方便選課查詢)', v-on:click='$("#outputCourse").modal()')
          i.fa.fa-floppy-o
          p 輸出課碼
      li.right
        a(href='#', title='輸出課表為圖片', v-on:click='saveSchedule()')
          i.fa.fa-download
          p 另存圖片
      //- li.right
      //-   a(href='#', title='手動新增課程', v-on:click='$("#selfAdd").modal()')
      //-     i.fa.fa-plus
      //-     p 手動新增
  #scheduleType
    ul.tab-nav
      li#timeSwitch.right(v-on:click='tableView = (tableView==8?13:8)')
        a(href='#' title='切換課表時間顯示')
          i.fa.fa-sun-o(v-if='tableView==8')
            span 8堂
          i.fa.fa-moon-o(v-if='tableView==13')
            span 13堂
      li#viewSwitch.right(v-on:click='viewSwitch = (viewSwitch+1)%4')
        a(href='#' title='切換課表內容顯示項目', view='1')
          i.fa.fa-eye(v-if='viewSwitch==0')
            span 僅顯示課名
          i.fa.fa-eye(v-if='viewSwitch==1')
            span 顯示課名及教師
          i.fa.fa-eye(v-if='viewSwitch==2')
            span 顯示課名及教室
          i.fa.fa-eye(v-if='viewSwitch==3')
            span 全部顯示
  #scheduleBlock
    table#scheduleTable
      thead
        tr
          th(v-for='day in ["", "一", "二", "三", "四", "五"]') {{ day }}
      tbody
        tr(v-for='(course, index) in schedule', v-if='index < tableView')
          td {{ index+1 }}
          td(v-for='(item, key) in course', v-bind:class='{free: item[1]==1, notfree: item[1]==2, self: item[1]==3}')
            p ({{ index }}, {{ key }}) {{ schedule[index][key][1] }}
            .course(v-if='item[0] != ""')
              p {{ item[0].title_parsed.zh_TW }}
              p(v-if='viewSwitch==1 || viewSwitch==3') {{ item[0].professor }}
              p(v-if='viewSwitch>=2') {{ item[0].location[0] }}
